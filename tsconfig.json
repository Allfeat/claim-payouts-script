{
  "compilerOptions": {
    "paths": {
      "@allfeat/types/*": ["./node_modules/@allfeat/types/src/*"],
      "@polkadot/api/augment": ["./node_modules/@allfeat/types/src/interfaces/augment-api.ts"],
      "@polkadot/types/augment": ["./node_modules/@allfeat/types/src/interfaces/augment-types.ts"]
    },
    // Enable latest features
    "lib": ["ESNext"],
    "target": "ESNext",
    "module": "ESNext",
    "moduleDetection": "force",
    "jsx": "react-jsx",
    "allowJs": true,

    // Bundler mode
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "noEmit": true,

    // Best practices
    "strict": true,
    "skipLibCheck": true,
    "noFallthroughCasesInSwitch": true,

    // Some stricter flags (disabled by default)
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noPropertyAccessFromIndexSignature": false
  }
}
